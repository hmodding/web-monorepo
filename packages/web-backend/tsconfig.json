{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "lib",
    "allowJs": true,
    "typeRoots": ["./node_modules/@types", "./src/@types"],
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "*": ["./src/@types/*", "*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx"]
}
